<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#1391CE"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/lottieDoctor"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="doctor.json"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
android:layout_below="@id/lottieDoctor"        android:src="@drawable/medicine"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lottieDoctor"
        android:layout_centerInParent="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/architects_daughter"
        android:text="CHILL PILL"
        android:id="@+id/t1"
        android:textSize="30dp" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/lottieProcess"
        android:layout_alignParentBottom="true"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        />

</RelativeLayout>