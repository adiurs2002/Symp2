<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/lottieStress"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
            app:lottie_fileName="process1.json"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="ACCORDING TO OUR ALGORITHMS THESE ARE THE PREDICTIONS"
            android:textSize="25dp"
            android:layout_below="@id/lottieStress"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pred"
            android:text="MALARIA, DENGUE, ITCHING, FEVER"
            android:textSize="20dp"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>


</RelativeLayout>